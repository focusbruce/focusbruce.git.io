@model HLSJ.Web.Models.UserInfoModel
@{
    ViewBag.Title = "经验分享";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<link href="~/Content/Css/doublefish.pager.css" rel="stylesheet" />
<script src="~/Content/Js/doublefish.pager.js"></script>
<script src="~/Content/Js/JsPageSufferList.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        onPageLoad();
    });
</script>
<style>
    .announcementcontext
    {
        color: #000;
        font-size: 12px;
        font-weight:400;
    }
</style>
<div class="wrap">
    <div class="mt10 clearfix">
        <div class="fr announcement">
            <div class="box">
                <div class="announcementtitle">火狼商家群【经验分享】</div>
                <div class="announcementcontext">
                    <table width="100%" border="0" cellspacing="1" cellpadding="0">
                        <tr>
                            <td align="right">标题：
                            </td>
                            <td>
                                <input type="text" id="Notice_Title" />
                            </td>
                            <td>
                                <input type="button" id="_search" value="查询" onclick="changePage(1);" />
                            </td>
                        </tr>
                    </table>
                    <table class="border" style="border-collapse: collapse;" cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tr style="height: 30px;" align="center">
                            <th scope="col" style="width: 60px; cursor: col-resize;">
                                <div style="width: 99%; line-height: 24px; cursor: default;">序号</div>
                            </th>
                            <th style="cursor: col-resize;" scope="col">
                                <div style="width: 99%; line-height: 24px; cursor: default;">标题</div>
                            </th>
                            <th scope="col" style="width: 110px; cursor: col-resize;">
                                <div style="width: 99%; line-height: 24px; cursor: default;">添加日期</div>
                            </th>
                        </tr>
                        <tbody id="tbList"></tbody>
                    </table>
                    <div id="divPager" class="dfPager">
                    </div>
                </div>
            </div>
        </div>
        <div class="fl loginbox">
            <div class="box">
                <div class="logintitle">会员登录</div>
                <div class="logincontent">
                    <form name="J_form" method="post" action="/Home/Login" id="J_form">
                        <div class="feld">
                            <label>用户名:</label><input name="userCode" type="text" value="A" id="userCode" class="txt" data-valid="{regex: [/^A\d{3,4}$/,'用户名为A带3~4个数字']}" />
                        </div>
                        <div class="feld">
                            <label>密码:</label><input name="pwd" type="password" id="pwd" class="txt" data-valid="{regex: [/^\S{5,10}$/,'密码为5~10个字符']}" />
                        </div>
                        <div class="feld">
                            <label>验证码:</label><input name="authcode" type="text" id="authcode" class="codetxt" data-valid="{regex: [/^\S{4,4}$/,'验证码为4个字符']}" />
                            @Html.Partial("VeriCode", new HLSJ.Web.Models.VeriCodeClass("userCode"))
                            @Html.ValidationMessageFor(model => model.VerifiCode)
                        </div>
                        <div class="feld">
                            <label></label>
                            <input type="image" name="btnSubmit" id="btnSubmit" src="~/Content/images/login_button.jpg" style="border-width: 0px;">
                            <a href="/PageThick/Thick">忘记密码</a>
                        </div>
                        <div class="feld">
                            <label></label>
                            <a href="/Register/Sign">
                                <img src="~/Content/images/register.gif" width="134" height="33"></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


