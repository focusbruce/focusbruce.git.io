@model HLSJ.Web.Models.MainModel
@{
    ViewBag.Title = "会员主页";
    Layout = "~/Views/Shared/_LayoutBefore.cshtml";
}
<div class="fr main">
    <div class="box mt10">
        <div class="boxtitle">会员公告</div>
        <div class="boxinfo">
            <div>
                <table class="border" style="border-collapse: collapse;" cellpadding="0" cellspacing="0" border="0">
                    <tbody>
                        @if (Model.NoticeList.Count > 0)
                        {
                            <tr style="height: 30px;" align="center">
                                <th scope="col" style=" cursor: col-resize;">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">标题</div>
                                </th>
                                <th style="cursor: col-resize;width: 200px;" scope="col">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">发布日期</div>
                                </th>
                            </tr>
                            foreach (HLSJ.Business.ViewObject.Notice_InfoVO v in Model.NoticeList)
                            {
                            <tr>
                                <td>
                                    <a href="/Main/NoticeMsg?ID=@v.ID">@v.Title</a>
                                </td>
                                <td>@v.AddTime
                                </td>
                            </tr>
                            }
                        }
                        else
                        {
                            <tr style="height: 100px;" align="center">
                                <td colspan="6">没有发布任何公告！</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box mt10">
        <div class="boxtitle">发布的任务</div>
        <div class="boxinfo">
            <div>
                <table class="border" style="border-collapse: collapse;" cellpadding="0" cellspacing="0" border="0">
                    <tbody>
                        @if (Model.PublishList.Count > 0)
                        {
                            <tr style="height: 30px;" align="center">
                                <th scope="col" style="cursor: col-resize;">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">任务要求</div>
                                </th>
                                <th style="cursor: col-resize;width: 100px; " scope="col">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">申请人</div>
                                </th>
                                <th style="cursor: col-resize;width: 100px; " scope="col">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">任务状态</div>
                                </th>
                            </tr>
                            foreach (HLSJ.Business.ViewObject.Apple_FlowVO v in Model.PublishList)
                            {
                            <tr>
                                <td>
                                    @v.Title
                                </td>
                                <td>@v.AppleCode
                                </td>
                                <td>@(v.State == 0 ? "正在申请" : (v.State == 1 ? "通过申请" : (v.State == 2 ? "任务完成" : "未评价")))</td>
                            </tr>
                            }
                        }
                        else
                        {
                            <tr style="height: 100px;" align="center">
                                <td colspan="6">没有发布任何任务！</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box mt10">
        <div class="boxtitle">申请的任务</div>
        <div class="boxinfo">
            <div>
                <table class="border" style="border-collapse: collapse;" cellpadding="0" cellspacing="0" border="0">
                    <tbody>
                        @if (Model.AppleList.Count > 0)
                        {
                            <tr style="height: 30px;" align="center">
                                <th scope="col" style=" cursor: col-resize;">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">任务要求</div>
                                </th>
                                <th style="cursor: col-resize;width: 100px;" scope="col">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">发布人</div>
                                </th>
                                <th style="cursor: col-resize;width: 100px;" scope="col">
                                    <div style="width: 99%; line-height: 24px; cursor: default;">任务状态</div>
                                </th>
                            </tr>
                            foreach (HLSJ.Business.ViewObject.Apple_FlowVO v in Model.AppleList)
                            {
                            <tr>
                                <td>
                                    @v.Title
                                </td>
                                <td>@v.PublishCode
                                </td>
                                <td>@(v.State == 0 ? "正在申请" : (v.State == 1 ? "通过申请" : (v.State == 2 ? "任务完成" : "未评价")))</td>
                            </tr>
                            }
                        }
                        else
                        {
                            <tr style="height: 100px;" align="center">
                                <td colspan="6">没有申请任何任务！</td>
                            </tr> 
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

