<style> 
     .tanchu_frame{ background:#000; width:100%; height:100%; position:fixed; z-index:99999; opacity:0.95;filter:alpha(opacity=95); }
     .tanchu{ background:#fff; border:3px #999999 solid;  width:610px; height:330px; position:fixed; left:50%; margin-left:-330px; top:50%; margin-top:-165px; padding-top:50px; z-index:9999999;}
	 .xunjia_main{ width:660px; height:auto; padding:10px 0px; }
     .xunjia_main tr{ width:660px; height:auto;}
     .xunjia_main tr td{ height:auto; line-height:30px; font-size:12px; color:#666666;}
     .xunjia_main tr td span{ color:#bc0000;}
     .xunjia_main tr td a{color:#0a6eac;}
     .xunjia_main tr td a:hover{ color:#e06610;}
	 .xunjie_title{ width:350px; height:20px; line-height:20px; border:1px #999 solid; font-size:12px; color:#333333; padding-left:5px; margin-top:3px; float:left;}
	 .tijiao{ background:url(../../Content/images/save.gif); width:97px; height:33px; cursor:pointer; border:none; margin-top:10px; float:left;}
</style>

<div class="tanchu_frame" id="review" style="display: none;">
    <input type="hidden" id="appleId" />
    <div class="tanchu">
        <table border="0" cellspacing="0" cellpadding="0" class="xunjia_main">
            <tr>
                <td width="25%" align="right">
                    内容:
                </td>
                <td width="75%" align="left" style="padding-left: 10px;">
                    <textarea rows="8" cols="80" id="content" style="width: 355px; height: 100px; font-size: 12px; line-height: 20px; color: #333; padding-left: 5px;"></textarea>
                </td>
            </tr>
            <tr>
                <td width="25%" align="right">&nbsp;&nbsp;
                </td>
                <td width="75%" align="left" style="padding-left: 10px;">
                    <input type="button" class="tijiao" onclick="return onReviewPublish();" />
                    <input type="button" class="tijiao" style="background: url(../../Content/images/guanbi.jpg); margin-left: 15px;" onclick="onClose('review');" />
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="tanchu_frame" id="subjoin" style="display: none;">
    <input type="hidden" id="subjoinId" />
    <div class="tanchu">
        <table border="0" cellspacing="0" cellpadding="0" class="xunjia_main">
            <tr>
                <td width="25%" align="right">
                    号码:
                </td>
                <td width="75%" align="left" style="padding-left: 10px;">
                    <input type="text" class="xunjie_title" id="_Number" value="">
                </td>
            </tr>
            <tr>
                <td width="25%" align="right">&nbsp;&nbsp;
                </td>
                <td width="75%" align="left" style="padding-left: 10px;">
                    <input type="button" class="tijiao" onclick="return onAddOrUpdate();" />
                    <input type="button" class="tijiao" style="background: url(../../Content/images/guanbi.jpg); margin-left: 15px;" onclick="onClose('subjoin');" />
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="tanchu_frame" id="AppleAddId" style="display: none;">
    <input type="hidden" id="_AppleId" />
    <div class="tanchu">
        <table border="0" cellspacing="0" cellpadding="0" class="xunjia_main">
            <tr>
                <td width="25%" align="right">
                    旺旺号:
                </td>
                <td width="75%" align="left" style="padding-left: 10px;">
                    <select id="_SubjoinNum">
                        <option value="0">请选择</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td width="25%" align="right">&nbsp;&nbsp;
                </td>
                <td width="75%" align="left" style="padding-left: 10px;">
                    <input type="button" class="tijiao" onclick="return onHallSave();" />
                    <input type="button" class="tijiao" style="background: url(../../Content/images/guanbi.jpg); margin-left: 15px;" onclick="onClose('AppleAddId');" />
                </td>
            </tr>
        </table>
    </div>
</div>