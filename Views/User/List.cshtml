@model HLSJ.Web.Models.UserInfoModel
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Js/JsUser.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        onPageLoad();
    });
</script>

<div class="fr main">
    <div class="box">
        <div class="boxtitle">用户管理</div>
        <div class="boxinfo" style="min-height: 470px; _height: 470px;">
            <div>
                <table width="100%" border="0" cellspacing="1" cellpadding="0">
                    <tr>
                        <td align="right">用户名：
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.UserInfo.Code)
                        </td>
                        <td align="right">姓名：
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.UserInfo.Name)
                        </td>
                        <td>
                            <input type="button" id="_search" value="查询" onclick="changePage(1);" />
                        </td>
                    </tr>
                </table>
                <table class="border" style="border-collapse: collapse;" cellpadding="0" cellspacing="0" border="0">
                    <tr style="height: 30px;" align="center">
                        <th scope="col" style="width: 60px; cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">序号</div>
                        </th>
                        <th style="width: 80px; cursor: col-resize;" scope="col">
                            <div style="width: 99%; line-height: 24px; cursor: default;">用户名</div>
                        </th>
                        <th scope="col" style="width: 120px; cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">姓名</div>
                        </th>
                        <th scope="col" style="cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">QQ号</div>
                        </th>
                        <th scope="col" style="width: 90px; cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">金币数量</div>
                        </th>
                        <th scope="col" style="width: 160px; cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">操作</div>
                        </th>
                    </tr>
                    <tbody id="tbList"></tbody>
                </table>
                <div id="divPager" class="dfPager">
                </div>
            </div>
        </div>
    </div>
</div>
