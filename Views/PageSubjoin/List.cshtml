@model HLSJ.Web.Models.SubjoinModel
@{
    ViewBag.Title = "我的管理";
    Layout = "~/Views/Shared/_LayoutBefore.cshtml";
}
<script src="~/Content/Js/JsPageSubjoin.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        onPageLoad();
    });
</script>

<div class="fr main">
    <input type="hidden" id="_mark" value="@ViewBag.Mark" />
    <div class="box">
        <div class="boxtitle">@ViewBag.vbTitle</div>
        <div class="boxinfo" style="min-height: 470px; _height: 470px;">
            <div>
                <table width="100%" border="0" cellspacing="1" cellpadding="0">
                    <tr>
                        <td align="right">@(ViewBag.Mark>0?"小号":"旺旺号")：
                        </td>
                        <td>
                            @Html.TextBoxFor(m=>m.Subjoin.Number)
                        </td>
                        <td align="right">状态：
                        </td>
                        <td>
                            @Html.DropDownListFor(m => m.Subjoin.State, (List<SelectListItem>)ViewBag.SubjoinStateData)
                        </td>
                        <td>
                            <input type="button" id="_search" value="查询" onclick="changePage(1);" />
                        </td>
                    </tr>
                </table>
                <a href="#" onclick="onInsert();">新建</a>
                <table class="border" style="border-collapse: collapse;" cellpadding="0" cellspacing="0" border="0">
                    <tr style="height: 30px;" align="center">
                        <th scope="col" style="width: 60px; cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">序号</div>
                        </th>
                        <th style="cursor: col-resize;" scope="col">
                            <div style="width: 99%; line-height: 24px; cursor: default;">@(ViewBag.Mark>0?"小号":"旺旺号")</div>
                        </th>
                        <th scope="col" style="width: 80px; cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">状态</div>
                        </th>
                        <th scope="col" style="width: 150px; cursor: col-resize;">
                            <div style="width: 99%; line-height: 24px; cursor: default;">操作</div>
                        </th>
                    </tr>
                    <tbody id="tbList"></tbody>
                </table>
                <div id="divPager" class="dfPager">
                </div>
            </div>
        </div>
    </div>
</div>
